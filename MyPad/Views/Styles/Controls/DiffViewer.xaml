<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dp="clr-namespace:DiffPlex.Wpf.Controls;assembly=DiffPlex.Wpf">

    <Style x:Key="Common.DiffViewer" TargetType="{x:Type dp:DiffViewer}">
        <Setter Property="Foreground" Value="{DynamicResource MahApps.Brushes.Text}"/>
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.Control.Background}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource MahApps.Brushes.Control.Background}"/>
        <Setter Property="LineNumberForeground" Value="{DynamicResource MahApps.Brushes.Gray2}"/>
        <Setter Property="HeaderForeground" Value="{DynamicResource MahApps.Brushes.Gray2}"/>
        <Setter Property="HeaderBackground" Value="{DynamicResource MahApps.Brushes.Control.Background}"/>
        <Setter Property="SplitterWidth" Value="0"/>
    </Style>

    <Style TargetType="{x:Type dp:DiffViewer}" BasedOn="{StaticResource Common.DiffViewer}"/>

</ResourceDictionary>